

{% block title %}This is my To Do List for today !{% endblock %}

{% block body %}
    {%if 'todo' in session|keys %}
        <h1>ToDo list :</h1>

    {%endif%}

    <ol class="list-group list-group-numbered">


        {%for key,value in session.get("todo")%}

            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">{{key}}</div>
                    {{value}}
                </div>
            </li>
        {%endfor%}

    </ol>
{% endblock %}